#pagination
  max-width 600px
  margin 0 auto

  a
    display block
    padding 5px 10px
    background color-border
    color color-meta
    font-family font-title
    text-shadow 0 0 1px #fff
    margin-top 0px
    margin-bottom 100px
    &:hover
      background color-link
      color #fff
      text-decoration none
      text-shadow none

  .prev
    &:before
      content '\f053'
      padding-right 10px
      font-family font-icon

  .next
    &:after
      content '\f054'
      padding-left 10px
      font-family font-icon