*
  margin 0
  padding 0

body
  background color-background
  color color-font
  font-family font-default
  font-size 1em
  text-shadow 0 0 1px transparent
  

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  

.alignleft
  float left

.alignright
  float right

.aligncenter
  text-align center

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

#main-col
 
  width 100%
  @media screen and (max-width: 1024px)
    width 100%
  @media screen and (max-width: 480px)
    width 100%  
    margin-right 0
    float none

  .post-content
   margin 0 auto
   width 600px
   @media screen and (max-width: 1024px)
     width 80%
   @media screen and (max-width: 480px)
     width 80%
   

#wrapper 
  @media screen and (max-width: 900px)
    margin-right 0